<!DOCTYPE html>
<html>
  <head>
    <title>WatchDoge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-primary">
      <%= link_to root_path, class: 'navbar-brand text-center' do %>
        <%= image_tag 'doge.png', class: 'd-inline-block align-top' %>
      <% end %>
      <div class="navbar-brand title">
        <b>watch doge</b>
        <br />
        much news <br/> very info
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
